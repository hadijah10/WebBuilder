{
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src"]
}